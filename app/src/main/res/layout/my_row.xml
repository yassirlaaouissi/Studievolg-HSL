<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/MyImageView"
                android:layout_width="54dp"
                android:layout_height="61dp"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/gradeicon" />

            <TextView
                android:id="@+id/vakken_txt"
                android:layout_width="277dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="Name"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/MyImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Grade_txt"
                android:layout_width="55dp"
                android:layout_height="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="Grade:"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/ECTS_txt"
                app:layout_constraintTop_toBottomOf="@+id/vakken_txt" />

            <TextView
                android:id="@+id/TypeOfModule_txt"
                android:layout_width="111dp"
                android:layout_height="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="Type:"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/Grade_txt"
                app:layout_constraintTop_toBottomOf="@+id/vakken_txt" />

            <TextView
                android:id="@+id/ECTS_txt"
                android:layout_width="57dp"
                android:layout_height="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="ECTS:"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/jaar_txt"
                app:layout_constraintTop_toBottomOf="@+id/vakken_txt" />

            <TextView
                android:id="@+id/jaar_txt"
                android:layout_width="59dp"
                android:layout_height="15dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:text="Year:"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/vakken_txt"
                app:layout_constraintTop_toBottomOf="@+id/vakken_txt"
                tools:text="Year:" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>